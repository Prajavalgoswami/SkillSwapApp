@{
}
@model SkillSwapApp.ViewModels.DashboardViewModel

<h2>My Dashboard</h2>

<div class="card mb-4">
    <div class="card-body">
        <h4>Profile Info</h4>
        <p><strong>Name:</strong> @Model.User.FullName</p>
        <p><strong>Email:</strong> @Model.User.Email</p>
        <p><strong>Offered Skill:</strong> @Model.User.OfferedSkill</p>
        <p><strong>Needed Skill:</strong> @Model.User.NeededSkill</p>
        <a class="btn btn-primary" href="/Account/Edit">Edit Profile</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4>My Skills</h4>
        <a class="btn btn-success mb-2" href="/Skill/Create">Add New Skill</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Skill</th>
                    <th>Level</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var skill in Model.Skills)
                {
                    <tr>
                        <td>@skill.Name</td>
                        <td>@skill.Level</td>
                        <td>
                            <a href="/Skill/Edit/@skill.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a href="/Skill/Delete/@skill.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
