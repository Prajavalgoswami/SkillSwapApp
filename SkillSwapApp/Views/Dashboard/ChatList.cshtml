@{
}
@model IEnumerable<SkillSwapApp.Models.ApplicationUser>

<h2>Chats</h2>
<ul class="list-group">
    @foreach (var user in Model)
    {
        <li class="list-group-item">
            <a asp-controller="Chat" asp-action="Chat" asp-route-userId="@user.Id">
                💬 Chat with @user.FullName
            </a>
        </li>
    }
</ul>
