@{
}
@model IEnumerable<SkillSwapApp.Models.Skill>

<h2>My Skills</h2>

<a asp-action="Create" class="btn btn-primary">Add Skill</a>

<table class="table table-bordered mt-3">
    <tr>
        <th>Name</th>
        <th>Level</th>
        <th>Actions</th>
    </tr>
    @foreach (var skill in Model)
    {
        <tr>
            <td>@skill.Name</td>
            <td>@skill.Level</td>
            <td>
                <a asp-action="Edit" asp-route-id="@skill.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@skill.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>